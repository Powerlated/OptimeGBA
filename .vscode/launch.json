    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Linux/Mac)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.1/OptimeGBA",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "preLaunchTask": "build",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (Windows)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.1/OptimeGBA.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "preLaunchTask": "build",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}